{
    "geode":        1,
	"version":      "v1.0.0",
	"id":           "com.geode.api",
    "name":         "Geode API",
    "developer":    "Geode Team",
    "description":  "Shared API utilities",
    "repository": "https://github.com/geode-sdk/api",
	"dependencies": null,
    "binary":       "GeodeAPI",
    "settings": {
        "my-setting": {
            "type": "int",
            "name": "My Awesome Setting",
            "value": {
                "default": 17,
                "max": 500,
                "min": 0,
                "step": 10
            },
            "control": {
                "step": 50
            }
        }
    },
    "resources": {
        "fonts": {
            "mdFont": {
                "path": "resources/fonts/Ubuntu-Regular.ttf",
                "size": 80
            },
            "mdFontB": {
                "path": "resources/fonts/Ubuntu-Bold.ttf",
                "size": 80
            },
            "mdFontI": {
                "path": "resources/fonts/Ubuntu-Italic.ttf",
                "size": 80
            },
            "mdFontBI": {
                "path": "resources/fonts/Ubuntu-BoldItalic.ttf",
                "size": 80
            },
            "mdFontMono": {
                "path": "resources/fonts/UbuntuMono-Regular.ttf",
                "size": 80
            }
        },
        "files": [
            "resources/images/*.png"
        ],
        "spritesheets": {
            "LogoSheet": [
                "resources/logos/*.png"
            ],
            "APISheet": [
                "resources/*.png"
            ],
            "BlankSheet": [
                "resources/blanks/*.png"
            ]
        }
    },
    "toggleable": false
}
